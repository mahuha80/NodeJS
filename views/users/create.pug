extends ../layouts/common.pug

block content
        h1 User

        if errors
            each error in errors
                .alert.alert-danger= error
        form(action="/users/create" method="POST"  enctype="multipart/form-data")
            .form-group
                label(for="name") Name  
                input#name.form-control(type="text" name="name",value=values ? values.name:"")
            .form-group
                label(for="phone") Phone  
                input#phone.form-control(type="text" name="phone",value=values ?  values.phone:"")
            .form-group
                label(for="email") Email   
                input#phone.form-control(type="text" name="email")
            .form-group
                label(for="password") Password  
                input#phone.form-control(type="password" name="password") 
            .form-group
                label(for="avatar") Avatar  
                input#avatar.form-control-file(type="file" name="avatar")
                button.btn.btn-primary.mt-2 create        




